<div class="list_collection_template my-5">
  <div class="container">
    <div class="header">
      <h3 class="text-center mt-3">Shop</h3>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for collection in collections %}
          {% unless collection.handle contains 'frontpage' %}
            <a href="{{ collection.url }}" class="text-decoration-none text-dark">
              <div class="col">
                <div class="card">
                  <img
                    src="{{ collection.featured_image | img_url:'original' }}"
                    class="card-img-top"
                    alt="{{ collection.title }}"
                  >
                  <div class="card-body">
                    <h5 class="card-title">{{ collection.title }}</h5>
                  </div>
                </div>
              </div>
            </a>
          {% endunless %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
