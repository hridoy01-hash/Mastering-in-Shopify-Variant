                                        <div class="feature__img__wrapper" style="height: 180px;">
                                           
                                          <img class="single_featured_img" src="{{ product.featured_image |  img_url: 'medium' }}" alt="product-img">
                                            
                                            {% if product.images.size > 1 %}
                                                <img class="second_featured_img" src="{{ product.images[1] |  img_url: 'medium' }}" alt="product-img">
                                                {%- else -%}
                                                <img class="second_featured_img" src="{{ product.featured_image |  img_url: 'medium' }}" alt="product-img">
                                            {% endif %}
                                           
                                        </div>
                                    </div>
                                    <div class="product__variant__btn__wrapper product_modal_open" product-handle="{{ product.handle }}">
                                        <button class="product__variant__btn">Choose Option</button>
                                    </div>
                                    {% unless product.selected_or_first_available_variant.available %}
                                        <div class="sold_out_content_wrapper">
                                            <span class="sold_out_text">Sold out</span>
                                        </div>
                                    {% endunless %}
                                   
                                </div>
                                <!-- product-bottom-area -->
                                <div class="product__botton__content__wrapper">
                                    <div class="product__name__wrapper">
                                        <span class="product__name">{{ product.title }}</span>
                                    </div>
                                    <div class="product__price__wrapper">
                                        <div class="discount__price__wrapper">
                                            <span class="discount__price">{{ product.selected_or_first_available_variant.price |  money }}</span>
                                        </div>
                                        <div class="compare__price__wrapper">
                                            <span class="compare__price line_throw">{{ product.selected_or_first_available_variant.compare_at_price |  money }}</span>
                                        </div> <br>
                                        <a href="{{ product.url }}">View </a> 
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                           

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="view__more__wrapper">
            <button class="view__more__btn">See More</button>
        </div>


        <!-- product popup -->
        <div class="product_popup_container">
            <div class="product__popup__main__wrapper">
                <div class="popup__inner__content__wrappper">
                    <div class="display_img_comtainer">
                        <img class="popup_display_img" src="./Image.png" alt="">
                    </div>
                    <div class="product__info__wrapper">
                        <div class="product__name__wrapper">
                            <span class="popup_product__name">Soppiya Innovation</span>
                        </div>
                        <div class="product_price__wrapper">
                            <div class="price_amount_wrapper">
