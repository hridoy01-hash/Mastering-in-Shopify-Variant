{% schema %}
{
  "name":"Featured Collection",
  "settings":[
    {
      "type":"text",
      "id":"collection_title",
      "label":"Featured Collection title",
      "default":"Featured Colection"
    },
    {
    "type":"collection",
    "id":"featured_collection",
    "label":"Select Featured Collection"
    },
    {
    "type":"range",
      "min":2,
      "max":8,
      "step":2,
      "id":"show_limit_product",
      "label":"Products Show Quantity",
      "default":4
    },
    {
      "type":"header",
      "content":"Section title color"
    },
    {
      "type":"color",
      "id":"textColor",
      "label":"Background",
      "default":"#000000"
    }

  ],
  "presets":[
    {
      "name":"Featured Collection",
      "category":"Collection"
    }
  ]
}
{% endschema %}
